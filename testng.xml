<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="SwagLabs Mobile Automation Suite"
       verbose="1"
       parallel="methods"
       thread-count="2">

    <!-- ===================== -->
    <!-- Test Grouping by Flow -->
    <!-- ===================== -->

    <test name="Login Tests">
        <groups>
            <run>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.test.LoginTest"/>
        </classes>
    </test>

    <test name="Product Browsing Tests">
        <groups>
            <run>
                <include name="products"/>
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.test.ProductsTest"/>
        </classes>
    </test>

    <test name="Cart Tests">
        <groups>
            <run>
                <include name="cart"/>
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.test.CartTest"/>
        </classes>
    </test>

    <test name="Checkout Tests">
        <groups>
            <run>
                <include name="checkout"/>
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.test.CheckoutTest"/>
        </classes>
    </test>

</suite>
